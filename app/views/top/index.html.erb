<section class="top">

  <div class="top-texts">
    <p class="top-texts__text"><span class="big-text">Q</span> :「Quick Responseとは？」 = 迅速な対応</p>
  </div>

  <section class="top-main">
    <div class="top-main__heading">
      <h2 class="top-main__heading__text">様々なQRコードの作成ができます（無料）</h2>
    </div>
    <nav class="top-main__nav">
      <ul class="top-main__lists">
        <%= link_to '/top', class: "link" do %>
          <li class="top-main__list point">URL</li>
        <% end %>
        <%= link_to '/top', class: "link" do %>
          <li class="top-main__list">ファイル</li>
        <% end %>
        <%= link_to '/top', class: "link" do %>
          <li class="top-main__list">Wi-Fi</li>
        <% end %>
      </ul>
    </nav>
  </section>


    <% @qr_url.errors.full_messages.each do |message| %>
      <p class="error"><%= message %></p>
    <% end %>


  <%= form_with model: @qrs ,class: "input-form", local: true do |f| %>
  <%= f.text_field :url %>
  <%= f.submit "作成", class: "submit" %>
  <% end %>

</section>

